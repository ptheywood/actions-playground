{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "problem-matched-lint",
            "type": "shell",
            "command": "cpplint tests/src/main.cpp",
            "problemMatcher": [
                {
                    "owner": "cpplintmain",
                    "severity": "warning",
                    "pattern": [
                        {
                        "regexp": "^(.+):(\\d+):\\s+(.+)\\[(.+)\\]\\s+\\[(.+)\\]$",
                        "file": 1,
                        "line": 2,
                        "message": 3,
                        "code": 4
                        }
                    ],
                }
            ]
        }
    ]
}